generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          String    @id @default(cuid())
  name        String
  email       String
  phone       String
  seller      String
  meetingDate DateTime
  closed      Boolean
  createdAt   DateTime  @default(now())
  meetings    Meeting[]
}

model Meeting {
  id          String       @id @default(cuid())
  customerId  String
  customer    Customer     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  transcript  String
  createdAt   DateTime     @default(now())
  extractions Extraction[]
}

model Extraction {
  id             String   @id @default(cuid())
  meetingId      String   @unique
  meeting        Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  model          String
  status         String
  createdAt      DateTime @default(now())
  data           ExtractionData?
  apiLogs        LlmApiLog[]
}

model ExtractionData {
  id               String   @id @default(cuid())
  extractionId     String   @unique
  extraction       Extraction @relation(fields: [extractionId], references: [id], onDelete: Cascade)
  industry         String?
  businessModel    String?
  jtbdPrimary      String[]
  painPoints       String[]
  leadSource       String?
  processMaturity  String?
  toolingMaturity  String?
  knowledgeComplexity String?
  riskLevel        String?
  integrations     String[]
  urgency          String?
  successMetrics   String[]
  objections       String[]
  sentiment        String?
  volumeQuantity   Float?
  volumeUnit       String?
  volumeIsPeak     Boolean  @default(false)
  createdAt        DateTime @default(now())
}

model LlmApiLog {
  id          String   @id @default(cuid())
  extractionId String
  extraction  Extraction @relation(fields: [extractionId], references: [id], onDelete: Cascade)
  provider    String
  model       String
  status      String
  request     String?
  response    String
  error       String?
  durationMs  Int?
  promptTokens Int?
  completionTokens Int?
  totalTokens Int?
  createdAt   DateTime @default(now())
}
